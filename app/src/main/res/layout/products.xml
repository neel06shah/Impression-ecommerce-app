<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="2dp">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/prodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_toStartOf="@+id/prodQuantity"
                android:layout_toLeftOf="@+id/prodQuantity"
                android:fontFamily="@font/pt_sans"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/prodQuantity"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_toStartOf="@+id/prodRate"
                android:layout_toLeftOf="@+id/prodRate"
                android:gravity="right"
                android:text="1000"
                android:textColor="#000"
                android:textSize="15sp"
                android:fontFamily="@font/pt_sans"/>

            <TextView
                android:id="@+id/prodRate"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_toStartOf="@+id/prodScheme"
                android:layout_toLeftOf="@+id/prodScheme"
                android:gravity="right"
                android:text="Order"
                android:textColor="#000"
                android:textSize="15sp"
                android:fontFamily="@font/pt_sans"/>

        <TextView
            android:id="@+id/prodScheme"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_toStartOf="@+id/prodTotal"
            android:layout_toLeftOf="@+id/prodTotal"
            android:gravity="right"
            android:text="Disc"
            android:textColor="#000"
            android:textSize="15sp"
            android:fontFamily="@font/pt_sans"/>
            <TextView
                android:id="@+id/prodTotal"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:gravity="right"
                android:text="Order"
                android:textColor="#000"
                android:fontFamily="@font/pt_sans"
                android:textSize="15sp" />

        </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d3d3d3"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp"/>
</LinearLayout>
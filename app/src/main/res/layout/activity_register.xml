<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#e1f5fe"
    tools:context=".signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:theme="@style/AppTheme"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:shadowColor="#fff"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="Register"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="45sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_shaped"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:hint="Enter Name"
                android:inputType="textPersonName|textCapSentences"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shaped"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:ems="10"
                android:hint="Mobile Number"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shaped"
                android:drawableLeft="@drawable/ic_whatsapp"
                android:ems="10"
                android:hint="Whatsapp Number"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/party"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shaped"
                android:drawableLeft="@drawable/ic_building"
                android:hint="Trade Name"
                android:inputType="textPersonName|textCapSentences"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shaped"
                android:drawableLeft="@drawable/ic_home_address"
                android:hint="Enter Address"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />


            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shaped"
                android:drawableLeft="@drawable/ic_home_address"
                android:hint="City Name"
                android:inputType="textPersonName|textCapSentences"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />


            <EditText
                android:id="@+id/pinCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shaped"
                android:drawableLeft="@drawable/ic_home_address"
                android:ems="6"
                android:hint="Pin Code"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shaped"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shaped"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_building" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/type" />

            </LinearLayout>

            <EditText
                android:id="@+id/gst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shaped"
                android:drawableLeft="@drawable/ic_taxes"
                android:hint="GST number (if Any)"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/otp"
                    style="@style/AppTheme.newRoundedCornerMaterialButton"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:text="Get OTP"
                    android:textSize="15sp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#fff" />

            </LinearLayout>

            <EditText
                android:id="@+id/tvOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter OTP"
                android:layout_marginTop="20dp"
                android:textColorHint="#000"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_keyboard_black_24dp"
                android:textColor="#000"
                android:padding="10dp"
                android:background="@drawable/round_shaped"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/register"
                    style="@style/AppTheme.RoundedCornerMaterialButton"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:text="Verify"
                    android:textSize="15sp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    />
            </LinearLayout>


            <com.example.impressionselling.HorizontalDottedProgress
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

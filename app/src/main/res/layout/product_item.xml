<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardMaxElevation="5dp"
    android:layout_marginBottom="1dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bulkOrders"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/tvDiscount"
                    android:src="@drawable/bulk_orders1" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/tvDiscount"
                    android:layout_marginTop="16dp"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/discount"
                    android:gravity="center"
                    android:text="99%\nmargin"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-condensed-medium"
                    android:visibility="gone"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/imageView"
                    android:text="Apple MacBook Air Core i5 5th Gen - (8 GB/128 GB SSD"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="15sp" />


                <LinearLayout
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewShortDesc"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/imageView"
                        android:fontFamily="sans-serif-medium"
                        android:text="INR 56990"
                        android:textColor="#b12703"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="per pc"
                        android:textColor="#b12703"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textViewPrice"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/textViewPrice"
                        android:layout_toRightOf="@+id/textViewPrice"
                        android:text="MRP : "
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewMRP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textViewPrice"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_toEndOf="@+id/textView2"
                        android:layout_toRightOf="@+id/textView2"
                        android:text="T"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewShortDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewTitle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/imageView"
                    android:text="13.3 Inch, 256 GB"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textScheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewTitle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/imageView"
                    android:background="@drawable/rounded"
                    android:backgroundTint="#27a541"
                    android:padding="5dp"
                    android:text="13.3 Inch, 256 GB"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <TextView
                android:id="@+id/textViewDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewPrice"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:text="TextView"
                android:fontFamily="sans-serif-medium"
                android:textColor="#036b9e" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnAddCart"
                    style="@style/AppTheme.DarkRoundedCornerMaterialButton"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:drawableRight="@drawable/ic_shopping_cart2"
                    android:text="Add"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:layout_gravity="right"/>

                <ImageButton
                    android:id="@+id/btnDelete"
                    style="@style/AppTheme.DarkRoundedCornerMaterialButton"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_delete_white_24dp" />




            </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>